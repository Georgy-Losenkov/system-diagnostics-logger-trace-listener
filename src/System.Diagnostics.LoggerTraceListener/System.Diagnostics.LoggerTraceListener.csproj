<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <VersionPrefix>0.8.1</VersionPrefix>
        <Authors>losenkov</Authors>
        <Description>A trace listener (System.Diagnostics.TraceListener) that writes logs using Microsoft.Extensions.Logging.ILogger. Implementation is inspired by System.Diagnostics.XmlWriterTraceListener.</Description>
        <PackageTags>logging;ilogger;tracelistener;</PackageTags>
        <PackageProjectUrl>https://github.com/system-diagnostics-logger-trace-listener</PackageProjectUrl>
        <PackageLicenseUrl></PackageLicenseUrl>
        <RepositoryUrl>https://github.com/Georgy-Losenkov/system-diagnostics-logger-trace-listener.git</RepositoryUrl>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <RepositoryType>git</RepositoryType>
        <SignAssembly>false</SignAssembly>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.1.1" />
    </ItemGroup>
</Project>
